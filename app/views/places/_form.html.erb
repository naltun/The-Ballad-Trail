<%= simple_form_for @place, html: {multipart: true} do |f| %>
	<%= f.input :name, hint: 'e.g. Harlaw' %>
	<%= f.input :latitude, hint: 'Use google maps to find the latitude of the place e.g. "57.291939"' %>
	<%= f.input :longitude, hint: 'Use google maps to find the longitude of the place e.g. "-2.565474"'%>
	<%= f.input :region, hint: 'e.g. Inverurie' %>
	<%= f.input :image, as: :file, hint: 'upload an image to represent this place' %>
	<%= f.button :submit %>
<% end %>