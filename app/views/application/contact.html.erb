<form class="form-horizontal" role="form" method="post" name="form" onsubmit="return validateForm()">
    <div class="form-group">
        <label form="name" name="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="First & Last Name" value="">
        </div>
    </div>
    <div class="form-group">
        <label form="email" name="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" placeholder="example@domain.com" value="">
        </div>
    </div>
    <div class="form-group">
        <label form="message" class="col-sm-2 control-label">Message</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="4" name="textarea"></textarea>
        </div>
    </div>
        <div class="col-sm-10 col-sm-offset-2">
            <input id="submit" name="submit" type="submit" value="Send" class="btn btn-primary">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <! Will be used to display an alert to the user>
        </div>
    </div>
</form>

<script>
	function validateForm() {
    var x = document.forms["form"]["name"].value;
    if (x == null || x == "") {
        alert("Name must be filled out");
        return false;
    }

    var y = document.forms["form"]["email"].value;
    if (y == null || y == "") {
        alert("Email must be filled out");
        return false;
    }
    
    var email = document.forms["form"]["email"].value;
    var regex = /^([0-9a-zA-Z]([-_\\.]*[0-9a-zA-Z]+)*)@([0-9a-zA-Z]([-_\\.]*[0-9a-zA-Z]+)*)[\\.]([a-zA-Z]{2,9})$/;

    if(!regex.test(email)){
        alert("Please enter a valid email");
        return false;
    }

    var z = document.forms["form"]["textarea"].value;
    if (z == null || z == "") {
        alert("Message must be filled out");
        return false;
    }

}
</script>
