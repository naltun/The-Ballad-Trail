<h3><%= @composer.fname %> <%= @composer.lname %></h3>
<p><%= @composer.category %></p>
<p><%= @composer.bio %></p>

<p><% if @composer.end_user == current_end_user %></p>
	<p><strong><%= link_to 'Edit', edit_composer_path %></strong></p>

	<p><strong><%= link_to "Destroy", composer_path(@composer), method: :delete, data: { confirm: "Are you sure?"} %></strong></p>
<% elsif end_user_signed_in? %>
	<p><%= link_to 'Add new ballad', new_place_path %></p>
<% else %>
<p><strong><%= link_to 'Sign in to add new ballads', new_end_user_session_path %></strong></p>
<% end %>

<% if admin_signed_in? %>
<p><strong><%= link_to 'Edit', edit_composer_path %></strong></p>
<p><strong><%= link_to "Destroy", composer_path(@composer), method: :delete, data: { confirm: "Are you sure?"} %></strong></p>
<% end %>

	
