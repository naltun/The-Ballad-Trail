<%= simple_form_for @composer do |f| %>
	<%= f.input :fname, label: 'Your firstname'%>
	<%= f.input :lname, label: 'Your lastname'%>
	<%= f.input :type, collection: ["Singer", "Poet"], as: :radio_buttons %>
	<%= f.input :longitude, 'Use google maps to find the longitude of the place e.g. "-2.565474"'%>
	<%= f.input :region, hint: 'e.g. Inverurie' %>
<% end %>